<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.umik.shoptracker.StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ShopTracker"
        android:id="@+id/app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_in"
        android:text="Wejście"
        android:layout_marginRight="81dp"
        android:layout_marginEnd="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/app_name"
        android:layout_alignEnd="@+id/app_name"
        android:layout_marginBottom="78dp"
        android:onClick="onClickButtonIn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyjście"
        android:id="@+id/button_out"
        android:layout_alignTop="@+id/button_in"
        android:layout_alignLeft="@+id/app_name"
        android:layout_alignStart="@+id/app_name"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:onClick="onClickButtonOut"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_id"
        android:inputType="number"
        android:maxLength="3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_in"
        android:layout_alignStart="@+id/button_in"
        android:layout_alignRight="@+id/button_out"
        android:layout_alignEnd="@+id/button_out" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Podaj ID"
        android:id="@+id/set_id_view"
        android:layout_above="@+id/set_id"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
